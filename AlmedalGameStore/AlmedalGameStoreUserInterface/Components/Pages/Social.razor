<CardDeck Style="text-align:center" Class="mt-5">
    
        <AuthorizeView>
            <Authorized>
                <Div class="col-6 col-lg-2"></Div>
                <Div Class="col-8 container-discord">
                    <Div Class="d-flex align-content-center">
                        <iframe src="https://discordapp.com/widget?id=1229361047950069761&theme=dark" width="813" height="400" AlternateText="AlmedalGameStoreLogo.png" Rounded/>
